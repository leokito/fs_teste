{
    "openapi": "3.0.0",
    "info": {
      "title": "Common User App",
      "description": "A user register api.",
      "contact": {
        "name": "API Support",
        "url": "http://www.example.com/support",
        "email": "support@example.com"
      },
      "version": "1.0.1"
    },
  
    "servers": [
      {
        "url": "http://localhost:8080/api/v1",
        "description": "Users"
      }
    ],
    "paths": {
      "/users": {
        "post": {
          "description": "Rota para cadastro de usu√°rios",
          "tags": ["Users"],
          "requestBody": {
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/User" }
              },
              "examples": {
                "user": {
                  "value": {
                    "email": "nekeldev@gmail.com",
                    "password": "12345"
                  }
                }
              }
            }
          },
          "responses": {
            "401": {
              "description": "Unauthorized"
            },
            "400": {
              "description": "User already exists!"
            },
            "200": {
              "description": "OK",
              "content": {
                "application/json": {
                    "schema": { "$ref": "#/components/schemas/User" }
                  },
                "examples": {
                    "user": {
                      "value": {
                        "email": "nekeldev@gmail.com",
                        "password": "12345"
                      }
                    }
                  }
              }
            }
          }
        },
        "get": {
            "description": "read all registered users",
            "tags": ["Users"],
            "responses": {
                "200": {
                  "description": "OK",
                  "content": {
                    "application/json": {
                        "schema": { "$ref": "#/components/schemas/User" }
                      },
                    "examples": {
                        "user": {
                          "value": 
                          [
                              {
                                  "id": "ef62159e-58da-4a6d-93e6-f38e54fc71a1",
                                  "email": "example@mail.com",
                                  "password": "12345"
                              },
                              {
                                  "id": "d7c60328-21ab-46e5-a138-c8328114355e",
                                  "email": "example2@mail.com",
                                  "password": "54321"
                                },
                              {
                                  "id": "5d6088f5-7332-469d-becb-d5e6b988d12d",
                                "email": "example3@mail.com",
                                "password": "1s2d2b3d"
                            },
                            {
                                "id": "890e058e-3563-40be-a1be-3dea0c9e722d",
                                "email": "example4@mail.com",
                                "password": "abcdef"
                            }
                        ]
                        }
                    }
                      }
                  }
                }
              },
              "delete":{
                  "description": "Deletes all users",
                  "tags": ["Users"],
                  "response": {
                      "204": {
                          "description": "No body for response"
                      }
                  }
              }
        },
        "/users/:user_id": {
            "get":{
                "description": "List an user based on id",
                "tags":["Users"],
                "responses":{
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": { "$ref": "#/components/schemas/User" }
                              },
                              "examples": {
                                  "user": {
                                      "value": {
                                        "id": "ef62159e-58da-4a6d-93e6-f38e54fc71a1",
                                        "email": "example@mail.com",
                                        "password": "12345"
                                      }
                                  }
                              }
                        }
                    }
                }
            },
            "put": {
                "description": "Updates user info by id",
                "tags": ["Users"],
                "responses": {

                }
            },
            "delete": {
                "description": "Deletes one user based on id",
                "tags":["Users"]
            }
        }
      },
    "components": {
      "schemas": {
        "User": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "email": {
              "type": "string"
            },
            "id": {
              "type": "string"
            }
          }
        }
      }
    }
  } 